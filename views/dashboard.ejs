<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('./partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <div class="row">
            <div class="col-lg-12">
                <a class="btn btn-success mb-5" href="/user/create" title="Create user"><i class="fas fa-plus-circle"></i>

                </a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">NO</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Address</th>
                <th scope="col">Hobby</th>
                <th scope="col">Favorite Game</th>
                <th scope="col">Skor</th>
                <th scope="col">Action</th>

            </tr>
            </thead>
            <tbody>
            <% for (var i = 0; i < users.length; i++){ %>
                <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= users[i].name %> </td>
                    <td><%= users[i].age %> </td>
                    <td><%= users[i].address %> </td>
                    <td><%= users[i].hobby %> </td>
                    <td><%= users[i].favorite_game %> </td>
                    <td><%= users[i].skor %> </td>
                    <td><a class="btn btn-secondary" href="/user/<%= users[i].id %>"><i
                                    class="fa fa-edit"></i></a><span></span> <a class="btn btn-danger"
                                                                                href="/user/delete/<%= users[i].id %>"><i
                                    class="fa fa-trash"></i></a>
                    </td>

                </tr>
            <% } %>

            </tbody>
        </table>
    </div>
</main>

<footer>
    <%- include('./partials/footer'); %>
</footer>

</body>
</html>